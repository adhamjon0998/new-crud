<h1>Hello</h1>
{{#if categories.length}}
<div class="row">
    {{#each categories}}
    <div class="col-sm-3">
        <div class="card">
            <img src="/images/{{img}}" class="card-img-top" alt="{{name}}">
            <div class="card-body">
                <h5 class="card-title"><a href="/admin/categories/{{id}}">{{name}}</a></h5>
            </div>
            <div class="d-flex justify-content-between">
                <a href="/admin/category/edit/{{id}}">Change</a>
                <a href="/admin/category/delete/{{id}}">Delete</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<h2>Categories is empty</h2>
{{/if}}