<h1>Редактировать {{course.title}}</h1>

<form action="/courses/edit" method="POST">
    <div class="input-field">
        <input name="title" id="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Названия курса</label>
        <span class="helper-text" data-error="Введите названия"></span>
    </div>
    <div class="input-field">
        <input name="price" id="price" type="number" class="validate" min="1" required value="{{course.price}}">
        <label for="price">Цена курса</label>
        <span class="helper-text" data-error="Введите цену"></span>
    </div>
    <div class="input-field">
        <input name="img" id="img" type="text" class="validate" required value="{{course.img}}">
        <label for="img">Url картинке</label>
        <span class="helper-text" data-error="Введите url картинке"></span>
    </div>
    <input type="hidden" name="id" value="{{course.id}}">

    <button type="submit" class="btn btn-primary">Редактировать</button>
</form>

<form action="/courses/remove" method="POST">
    <input type="hidden" name="id" value="{{course.id}}">
    <button class="btn btn-primary action1">Удалить Курс</button>
</form>