<h1>Корзина</h1>
<div id="card">
{{#if courses.length}}
<table>
    <thead>
        <tr>
            <th>Названия курса</th>
            <th>Количество</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>

        {{#each courses}}
        <tr>
            <td>{{title}}</td>
            <td>{{count}}</td>
            <td>
                <button class="btn btn-small js-remove" data-id="{{id}}">Удалить</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<p><strong>Цуна:</strong><span class="price">{{price}}</span></p>
{{else}}
<p class="asd">Корзина пуста</p>
{{/if}}
</div>