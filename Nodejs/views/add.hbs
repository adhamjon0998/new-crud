<h1>Add page</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input name="title" id="title" type="text" class="validate" required>
        <label for="title">Названия курса</label>
        <span class="helper-text" data-error="Введите названия"></span>
    </div>
    <div class="input-field">
        <input name="price" id="price" type="number" class="validate" min="1" required>
        <label for="price">Цена курса</label>
        <span class="helper-text" data-error="Введите цену"></span>
    </div>
    <div class="input-field">
        <input name="img" id="img" type="text" class="validate" required>
        <label for="img">Url картинке</label>
        <span class="helper-text" data-error="Введите url картинке"></span>
    </div>

    <button class="btn btn-primary action">Добавить курс</button>
</form>