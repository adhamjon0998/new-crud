<h1>Мои заказы</h1>

{{#if orders.length}}
{{#each orders}}
<div class="row">
    <div class="col s6 offset-s3">
        <div class="card card">
            <div class="card-content content">
                <span style="color: #fff;" class="card-title">
                   <p style="font-size: 2rem; font-weight:600">Заказ</p>  <input type="hidden" name="{{_id}}" >
                </span>
                <p class="date" style="color: #fff; font-size: 2rem; font-weight:500">{{date}}</p>
                <p style="color: #fff; color: #fff; font-size: 1.3rem; font-weight:500; margin-top:10px" ><em>{{user.userId.name}}</em>{{user.userId.email}}</p>

                <ol style="font-size: 2rem; font-weight:600">
                    {{#each courses}}
                    <li style="color: #fff;">
                        {{course.title}} (x
                        <strong>{{count}}</strong>)
                    </li>
                    {{/each}}
                </ol>

                <hr>

                <p style="color: #fff;">Цену: <span class="price">{{price}}</span></p>
            </div>
        </div>
    </div>
</div>
{{/each}}
{{else}}
<p style="font-size: 2rem;color:#fff;text-align:center">Заказов пока нет</p>
{{/if}}