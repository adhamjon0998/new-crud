<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a class="active" href="#login" style="color: #fff;">Войти</a></li>
                <li class="tab col s6"><a href="#register" style="color: #fff;">Регистрация</a></li>
            </ul>
        </div>
        <div id="login" class="col s6 offset-s3">
            {{#if loginError}}
            <p class="alert">{{loginError}}</p>
            {{/if}}


            <h1 class="h1">Войти в магазин</h1>
            <form action="/auth/login" method="POST">

                <div class="input-field">
                    <input name="email" id="email" type="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Введите email"></span>
                </div>

                <div class="input-field">
                    <input name="password" id="password" type="password" class="validate" required>
                    <label for="password">Парол</label>
                    <span class="Введите парол" data-error="Введите цену"></span>
                </div>


                {{!-- <div class="input-field">
                    <input name="name" id="name" type="text" class="validate" required>
                    <label for="name">Ваше Имя</label>
                    <span class="helper-text" data-error="Введите имя"></span>
                </div> --}}

                <p><a style="color: #fff; color:rgba(0, 195, 255, 0.986)" href="/auth/reset">Забилы пароль?</a></p>

                <button class="btn btn-primary action" type="submit"
                    style="background: rgb(134, 36, 214)">Войти</button>
            </form>

        </div>


        <div id="register" class="col s6 offset-s3">

            {{#if registerError}}
            <p class="alert">{{registerError}}</p>
            {{/if}}
            <h1 class="h1">Создать аккаунть</h1>
            <form action="/auth/register" method="POST" novalidate>
                <div class="input-field">
                    <input name="email" id="remail" type="email" class="validate" required>
                    <label for="remail">Email</label>
                    <span class="helper-text" data-error="Введите email"></span>
                </div>
                <div class="input-field">
                    <input name="password" id="rpassword" type="password" class="validate" required>
                    <label for="rpassword">Парол</label>
                    <span class="Введите парол" data-error="Введите цену"></span>
                </div>
                <div class="input-field">
                    <input name="confirm" id="confirm" type="password" class="validate" required>
                    <label for="confirm">Парол ешё раз</label>
                    <span class="Введите парол" data-error="Введите цену"></span>
                </div>
                <div class="input-field">
                    <input name="name" id="rname" type="text" class="validate" required>
                    <label for="rname">Имя</label>
                    <span class="helper-text" data-error="Введите имя"></span>
                </div>

                <button class="btn btn-primary action" type="submit"
                    style="background: rgb(134, 36, 214)">Зарегтмтрироваться</button>
        </div>

    </div>
</div>